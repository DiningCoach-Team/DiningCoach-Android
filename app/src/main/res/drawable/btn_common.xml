<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <ripple
            android:color="@color/primary_700">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@color/primary_700"/>
                    <corners android:radius="@dimen/common_button_radius"/>
                </shape>
            </item>

            <item android:id="@android:id/background">
                <shape
                    android:shape="rectangle">
                    <solid android:color="@color/primary_500"/>
                    <corners
                        android:radius="@dimen/common_button_radius"/>
                </shape>
            </item>
        </ripple>
    </item>

    <item android:state_enabled="false">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/neutral_100"/>
            <corners android:radius="50dp"/>
        </shape>
    </item>
</selector>