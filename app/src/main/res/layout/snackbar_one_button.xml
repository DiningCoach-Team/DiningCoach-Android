<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/snackbar_default_root_height"
    android:layout_marginHorizontal="@dimen/snackbar_default_root_margin"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/sncakbar_default_root_radius"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/default_margin_padding_horizontal"
            android:textColor="@color/neutral_700"
            android:textSize="@dimen/snackbar_default_explain_text_size"
            android:textStyle="normal"
            tools:text="@string/snackbar_default_explain"
            android:fontFamily="@font/pretendard_bold"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/default_margin_padding_horizontal"
            tools:text="@string/common_go_setting"
            android:textColor="@color/primary_700"
            android:textSize="@dimen/snackbar_default_explain_text_size"
            android:textStyle="normal"
            android:fontFamily="@font/pretendard_bold"
            android:includeFontPadding="false"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>